<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/tvTitleUserScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USER PROFILE"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" />

    <TextView android:id="@+id/tvUserNameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitleUserScreen"
        android:layout_marginLeft="10dp"
        android:layout_margin="10dp"
        android:textSize="19sp"
        android:textColor="@android:color/holo_blue_dark" />

    <!-- name-->
    <TextView android:id="@+id/tvNameUserTitle"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserNameUser"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/holo_blue_dark"
        android:text="Name: "/>

    <TextView android:id="@+id/tvNameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserNameUser"
        android:layout_toRightOf="@+id/tvNameUserTitle"
        android:layout_marginLeft="10dp"
        android:text="manuel "/>

    <!-- email-->
    <TextView android:id="@+id/tvEmailUserTitle"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNameUserTitle"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/holo_blue_dark"
        android:text="Email: "/>

    <TextView android:id="@+id/tvEmailUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNameUserTitle"
        android:layout_toRightOf="@+id/tvEmailUserTitle"
        android:layout_marginLeft="10dp"
        android:autoLink="email"
        android:text="manuel@gmail.com "/>

    <!-- Phone-->
    <TextView android:id="@+id/tvPhoneUserTitle"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEmailUserTitle"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/holo_blue_dark"
        android:text="Phone: "/>

    <TextView android:id="@+id/tvPhoneUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEmailUserTitle"
        android:layout_toRightOf="@+id/tvPhoneUserTitle"
        android:layout_marginLeft="10dp"
        android:autoLink="phone"
        android:text="+44 07471 515  "/>

    <!-- Website-->
    <TextView android:id="@+id/tvWebsiteUserTitle"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPhoneUserTitle"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/holo_blue_dark"
        android:text="Website: "/>

    <TextView android:id="@+id/tvWebsiteUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPhoneUserTitle"
        android:layout_toRightOf="@+id/tvWebsiteUserTitle"
        android:layout_marginLeft="10dp"
        android:autoLink="web"
        android:text="www.outlook.com "/>

    <LinearLayout android:id="@+id/llDividerUser"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:layout_below="@+id/tvWebsiteUser"
        android:background="@android:color/darker_gray"/>

    <!-- company -->
    <TextView android:id="@+id/tvCompanyUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llDividerUser"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/holo_blue_dark"
        android:text="Company: " />


    <TextView android:id="@+id/tvCompanyNameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCompanyUser"
        android:layout_marginLeft="10dp" />


    <TextView android:id="@+id/tvCompanyBsUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCompanyNameUser"
        android:layout_marginLeft="10dp" />

    <TextView android:id="@+id/tvCompanyCatchPhraseUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="catch phrase"
        android:layout_below="@+id/tvCompanyBsUser"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_centerHorizontal="true" />

    <fragment
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvCompanyCatchPhraseUser"/>



</RelativeLayout>